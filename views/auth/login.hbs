
<form action="/auth/login" method="post">
<div class="container">
  <div class="row">
    <div class="col s12 m6 offset-m3" style="margin-top: 60px;">
      <div class="card border-rounded">
        <div class="card-content">
            <h4 class="center-align bold"><b>Login</b></h4>
          <div class="row">
            <div class="input-field col s12">
              <input class="validate" type="text" name="email" required id="email">
              <label for="email">Email</label>
            </div>
          </div>
          <div class="row">
            <div class="input-field col s12">
              <input class="validate" type="password" name="password" required id="password">
              <label for="password">Password</label>
            </div>
          </div>
        <div class="row">
         <div class="col s12">
            {{#if error}}
               <p class="red-text">{{error}}</p>
            {{/if}}
         </div>
      </div>
          <div class="row">
            <div class="col s12 center-align">
              <button class="btn waves-effect waves-light" type="submit">Login</button>
            </div>
          </div>
          <div class="row">
            <div class="col s12 center-align">
              <a class="btn waves-effect waves-light blue" href="/auth/register">Register</a>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
</form>