    <div class="row">
      <label for=""><b>Email</b></label>

      <div class="form-outline mb-4" style="padding-top: 5px">
        <input
          class="validate form-control"
          type="email"
          name="email"
          id="email"
          required
          autocomplete="off"
          placeholder="Email"
          value="{{user.email}}"
          pattern="[a-z0-9._%+-]+@[a-z0-9.-]+\.[a-z]{2,}$"
          title="Email address must contain at least one '@' character"
        />
      </div>
    </div>

    <div class="row">
      <label for=""><b>Address</b></label>
      <div class="form-outline mb-4" style="padding-top: 5px">
        <input
          class="form-control"
          id="address"
          placeholder="Address"
          type="text"
          autocomplete="off"
          name="address"
          minlength="1"
         value="{{user.address}}"
          required
        />
      </div>
    </div>
    <div class="row">
