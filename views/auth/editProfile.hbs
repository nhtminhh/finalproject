<div
  class="container col s6"
  style="background-color: #667470; border-radius: 10px; padding: 15px"
>
  <form action="" method="post">
    <h5 class="center-align bold"><b>EDIT YOUR PROFILE</b></h5>
    <div class="row mb-4">
    <div class="form-outline" style="padding-top: 5px">
        {{#if error}}
          <p class="red-text" style="color: red;">{{error}}</p>
        {{/if}}
    </div>
    <div class="row mb-4">
      <label for=""><b>Name</b></label>

      <div class="form-outline" style="padding-top: 5px">
        <input
          class="validate form-control"
          type="text"
          name="name"
          id="name"
          required
          minlength="3"
          autocomplete="off"
          placeholder="Name"
          value="{{user.name}}"
        />
      </div>
    </div>

