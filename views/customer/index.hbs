<h1 style="text-align: center;">Customer list</h1>
<form action="/auth/customer/search" method="post">
    <input type="search" name="keyword" id="" placeholder="Search customer by name" required>
</form>
<br><br>
<table class="table table-primary">
    <tr>
        <th>Name</th>
        <th>Date of birth</th>
        <th>Gender</th>
        <th>Address</th>
        <th>Email</th>
        <th>Menu</th>
    </tr>
    {{#each customerList }}
    <tr>
        <td>{{name}}</td>
        <td>{{dob}}</td>
        <td>{{gender}}</td>
        <td>{{address}}</td>
        <td>{{email}}</td>
        <td>
            <a type="button" class="btn orange" href="/auth/customer/edit/{{_id}}">
                <i class="material-icons">edit</i>
            </a>
            <a type="button" class="btn red" href="/auth/customer/delete/{{_id}}" onclick="return confirm('Do you want to delete this customer?')">
                <i class="material-icons">delete</i>
            </a>
        </td>
    </tr>
    {{/each}}
</table>
