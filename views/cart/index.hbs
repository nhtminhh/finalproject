<div class="container">
<h3 style="text-align: center;"><b>Cart List</b></h3>

<table class="table table-striped">
    <tr>
        <th>Name</th>
        <th>Image</th>
        <th>Price</th>
        <th>Quantity</th>
        <th>Total</th>
        <th>Option</th>
    </tr>
    {{#each cartList }}
    <tr>
        <td>{{name}}</td>
        <td><img src="/images/{{image}}" width="100" height="100"></td>
        <td>{{price}}</td>
        <td>{{quantity}}</td>
        <td>{{total}}</td>
        <td>
        <a type="button" class="btn btn-warning" href="/cart/delete/{{_id}}" onclick="return confirm('Are you sure to remove this form Cart??')">
          <i class="material-icons" >delete</i>
        </a>
        </td>
    {{/each}}
       <form action="/cart/changeStatus" method="post">
        <input 
            type="submit"
              class="btn btn-success "
              style="width: 80px;  margin-left: 70px"
            ><i class="bi bi-bag-plus-fill">123123123123123123</i></input>
      </form>
</table>

</div>