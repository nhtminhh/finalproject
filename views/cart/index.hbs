<div class="container">
<h3 style="text-align: center;"><b>Cart</b></h3>

<table class="table table-striped table-dark">
    <tr>
        <th>Name</th>
        <th>Image</th>
        <th>Quantity</th>
        <th>Price</th>
        <th>Total</th>
        <th>Option</th>
    </tr>
    {{#each cartList }}
    <tr>
        <td>{{product.name}}</td>
        <td>{{product.image}}</td>
        <td>{{quantity}}</td>
        <td>{{total}}</td>
        <td></td>
        <td>
        <a type="button" class="btn btn-warning" href="">
          <i class="material-icons">delete</i>
        </a>
        </td>
    {{/each}}
</table>

</div>