<h5 style="text-align: center;"><b>MANAGER</b></h5>
<a type="button" class="btn btn-info" href="/auth/manager/add">
    <i class="bi bi-person-fill-add"></i>
</a>
<br><br>
<table class="table table-striped table-dark">
    <tr>
        <th>Name</th>
        <th>Date of birth</th>
        <th>Gender</th>
        <th>Address</th>
        <th>Email</th>
        <th>Menu</th>
    </tr>
    {{#each managerList }}
    <tr>
        <td>{{name}}</td>
        <td><span class="birth-date">{{dob}}</span></td>
        <td>{{gender}}</td>
        <td>{{address}}</td>
        <td>{{email}}</td>
        <td>
            <a type="button" class="btn btn-warning" href="/auth/manager/edit/{{_id}}">
                <i class="bi bi-person-fill-gear"></i>
            </a>
            <a type="button" class="btn btn-danger" href="/auth/manager/delete/{{_id}}" onclick="return confirm('Do you want to delete this manager?')">
                <i class="bi bi-person-fill-dash"></i>
            </a>
        </td>
    </tr>
    {{/each}}
</table>

<script>
        // Function to format date
        function formatDate(dateString) {
            var birthDate = new Date(dateString);
            return birthDate.toLocaleDateString("en-US", {
                weekday: 'short',
                year: 'numeric',
                month: 'short',
                day: 'numeric'
            });
        }

        // Loop through all elements with class "birth-date" and format the date
        document.querySelectorAll('.birth-date').forEach(function(element) {
            var formattedDate = formatDate(element.innerText);
            element.innerText = formattedDate;
        });
</script>
