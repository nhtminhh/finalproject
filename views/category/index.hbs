<h1 style="text-align: center;">Category list</h1>
<a type="button" class="btn btn-info" href="/category/add">
    <i class="material-icons">add</i>
</a>
<br><br>
<table class="table table-primary">
    <tr>
        <th>Name</th>
        <th>Description</th>
        <th>Menu</th>
    </tr>
    {{#each categoryList }}
    <tr>
        <td>{{name}}</td>
        <td>{{description}}</td>
        <td>
            <a type="button" class="btn orange" href="/category/edit/{{_id}}">
                <i class="material-icons">edit</i>
            </a>
            <a type="button" class="btn red" href="/category/delete/{{_id}}" onclick="return confirm('Do you want to delete this category')">
                <i class="material-icons">delete</i>
            </a>
        </td>
    </tr>
    {{/each}}
</table>

