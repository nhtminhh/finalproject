<h5 style="text-align: center;"><b>CATEGORY</b></h5>
<a type="button" class="btn btn-info" href="/category/add">
    <i class="material-icons">add</i>
</a>
<br><br>
<table class="table table-striped table-dark">
    <tr>
        <th>Name</th>
        <th>Description</th>
        <th>Menu</th>
    </tr>
    {{#each categoryList }}
    <tr>
        <td>{{name}}</td>
        <td>{{description}}</td>
        <td>
            <a type="button" class="btn btn-warning" href="/category/edit/{{_id}}">
                <i class="material-icons">edit</i>
            </a>
            <a type="button" class="btn btn-danger" href="/category/delete/{{_id}}" onclick="return confirm('Do you want to delete this category')">
                <i class="material-icons">delete</i>
            </a>
        </td>
    </tr>
    {{/each}}
</table>

