<h1>Category list</h1>
<a type="button" class="btn btn-info" href="/category/add">Add</a>
<br><br>
<table class="centered">
    <tr>
        <th>Name</th>
        <th>Description</th>
        <th>Menu</th>
    </tr>
    {{#each categoryList }}
    <tr>
        <td>{{name}}</td>
        <td>{{description}}</td>
        <td>
            <a type="button" class="btn orange" href="/category/edit/{{_id}}">Edit</a>
            <a type="button" class="btn red" href="/category/delete/{{_id}}" onclick="return confirm('Do you want to delete this category')">Delete</a>
        </td>
    </tr>
    {{/each}}
</table>

