<div class="container col s6" style="background-color:#606666;">
<form action="" method="post">
   <h5 class="center-align bold">EDIT CATEGORY</h5>
   <div class="row">
      <div class="input-field col s12 m4">
         <label for="">Category name</label>
         <input class="validate" type="text" name="name" id=""  value="{{category.name}}" autocomplete="off" required>
      </div>
   </div>
   <div class="row">
      <div class="input-field col s12 m4">
         <label for="">Category description</label>
         <input class="validate" type="text" name="description" id="" value="{{category.description}}" autocomplete="off" required>
      </div>
   </div>
   <div class="row">
      <div class="col s12 m4 center-align">
         <input class="btn" type="submit" value="Edit">
      </div>
   </div>
</form>
</div>