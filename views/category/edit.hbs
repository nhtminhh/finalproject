
<div class="container col s6" style="background-color: #667470; border-radius: 10px; padding: 15px">
  <form action="" method="post">
    <h5 class="center-align bold"><b>EDIT CATEGORY</b></h5>
    <div class="row mb-4">
      <label for=""><b>Category name</b></label>
      <div class="form-outline" style="padding: 5px">
        <input
          class="validate form-control"
          type="text"
          name="name"
          id=""
          required
          minlength="3"
          autocomplete="off"
          placeholder="Category name"
          value="{{category.name}}"
        />
      </div>
    </div>
    <div class="row mb-4">
      <label for=""><b>Description</b></label>
      <div class="form-outline" style="padding: 5px">
        <input
          class="validate form-control"
          type="text"
          name="description"
          id=""
          required
          autocomplete="off"
          placeholder="Category description"
          value="{{category.description}}" 
        />
      </div>
    </div>

      <div class="form-outline mb-4">
        <input class="btn btn-success" type="submit" value="Edit" />
      </div>
    </div>
  </form>
</div>


