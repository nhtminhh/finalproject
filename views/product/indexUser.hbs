<h3 style="text-align: center;">Product list</h3>
<div class="container">

<div class="row">
   <form action="/product/search" method="post">
      <input type="search" name="keyword" id="" placeholder="Search by product name" required autocomplete="off">
   </form>
</div>

<div class="row">
   <div class="dropdown">
                    <a href="#" class="btn dropdown-toggle" id="dropdownUser1" data-bs-toggle="dropdown" aria-expanded="false">
                        <span class="d-none d-sm-inline mx-1">Sort by</span>
                    </a>
                    <ul class="dropdown-menu dropdown-menu-light text-small shadow">
                        <li>
                          <a class="dropdown-item" href="/product/sort/name">
                            A to Z
                          </a>
                        </li>
                        <li>
                          <a class="dropdown-item" href="/product/sort/price">
                          Price
                          </a>
                        </li>
                    </ul>
                </div>
</div>



   
<div class="row">
{{#each productList }}
<div class="card" style="width: 18rem; margin: 7px">
<img class="card-img-top" src="{{image}}" alt="Card image cap" width="280" height="200" style="margin-top: 12px;">
<div class="card-body">
   <h6 class="card-title" style="font-weight: bold; text-align:center; color:darkblue">{{name}}</h6>
   <h6 style="font-weight: bold">Type: <strong>{{category.name}}</strong></h6>

   <h6 style="font-weight: bold;">Price: <strong>${{price}}</strong></h6>
   <h6 style="font-weight: bold;">Sold: <strong>{{sold}}</strong></h6>
   <h6 style="font-weight: bold;">Comment: {{remaining}}</strong></h6>

   <div style="margin-top: 20px;">
   <a href="#" class="btn btn-success" style="width: 80px;  margin-left: 15px"><i class="bi bi-bag-plus-fill"></i></a>
   <a href="/product/detail/{{_id}}" class="btn btn-success" style="width: 80px; margin-left: 15px" ><i class="bi bi-info-square-fill"></i></a>
   </div>
   

</div>
</div>
{{/each}}
</div>
</div>
