<h1 style="text-align: center;">Product list</h1>
<a type="button" class="btn btn-info" href="/product/add">
    <i class="material-icons">add</i>
</a>
<a type="button" class="green btn" href="/product/sort/name">
    <i class="material-icons">sort_by_alpha</i>
</a>
<a type="button" class="green btn" href="/product/sort/price">
    <i class="material-icons">sort</i>
</a>
<form action="/auth/customer/search" method="post">
    <input type="search" name="keyword" id="" placeholder="Search by product name" required>
</form>
<br><br>
<table class="table table-primary">
    <tr>
        <th>Name</th>
        <th>Price</th>
        <th>Quantity</th>
        <th>Sold</th>
        <th>Image</th>
        <th>Category</th>
        <th>Menu</th>
    </tr>
    {{#each productList }}
    <tr>
        <td>{{name}}</td>
        <td>{{price}}</td>
        <td>{{remaining}}</td>
        <td>{{sold}}</td>
        <td>
            <img src="{{image}}" width="100" height="100"> 
        </td>
        <td>{{category.name}}</td>
        <td>
            <a type="button" class="btn orange" href="/product/edit/{{_id}}">
              <i class="material-icons">edit</i>
            </a>
            <a type="button" class="btn red" href="/product/delete/{{_id}}"  onclick="return confirm('Do you want to delete this product')">
              <i class="material-icons">delete</i>
            </a>
        </td>
    </tr>
    {{/each}}
</table>

