<form action="" method="post">
   <h4 class="center-align bold">Add new Product</h4>
   <div class="row">
      <div class="input-field col s12 m4 offset-m4">
         <label for="">Product name:</label>
         <input class="validate" type="text" name="name" id="">
      </div>
   </div>
   <div class="row">
      <div class="input-field col s12 m4 offset-m4">
         <label for="">Product price</label>
         <input class="validate" type="number" name="price" id="">
      </div>
   </div>
   <div class="row">
      <div class="input-field col s12 m4 offset-m4">
         <label for="">Product quantity</label>
         <input class="validate" type="number" name="remaining" id="">
      </div>
   </div>
      <div class="row">
      <div class="input-field col s12 m4 offset-m4">
         <label for="">Product sold</label>
         <input class="validate" type="number" name="sold" id="">
      </div>
   </div>
   <div class="row">
      <div class="input-field col s12 m4 offset-m4">
         <label for="">Product image</label>
         <input class="validate" type="text" name="image" id="">
      </div>
   </div>
   <div class="row">
      <div class="col s12 m4 offset-m4">
         <label for="">Product category</label>
   <select name="category" id="">
    {{#each categoryList }}
    <option value="{{_id}}">
      {{ name }}
    </option>
    {{/each}}
  </select>
      </div>
   </div>
   <div class="row">
      <div class="col s12 m4 offset-m4 center-align">
         <input class="btn" type="submit" value="Add">
      </div>
   </div>
</form>

