<div class="container col s6" style="background-color: #606666;">
<form action="" method="post">
   <h5 class="center-align bold">EDIT PRODUCT</h5>
   <div class="row">
      <div class="input-field col s12 m4">
         <label for="">Product name:</label>
         <input class="validate" type="text" name="name" id="" value="{{product.name}}" required autocomplete="off">
      </div>
   </div>
   <div class="row">
      <div class="input-field col s12 m4">
         <label for="">Product price</label>
         <input class="validate" type="text" name="price" id="" value="{{product.price}}" required autocomplete="off">
      </div>
   </div>
   <div class="row">
      <div class="input-field col s12 m4">
         <label for="">Product quantity</label>
         <input class="validate" type="text" name="quantity" id="" value="{{product.remaining}}" required autocomplete="off">
      </div>
   </div>
   <div class="row">
      <div class="input-field col s12 m4">
         <label for="">Product image</label>
         <input class="validate" type="url" name="image" id="" value="{{product.image}}" required autocomplete="off">
      </div>
   </div>
   <div class="row">
      <div class="input-field col s12 m4">
         <img src="{{ product.image }}" alt="" width="120" height="120">
      </div>
   </div>

   <div class="row">
      <div class="col s12 m4">
         <label for="">Product category</label>
   <select name="category" id="">
    {{#each categoryList }}
    <option value="{{product.category}}">
      {{ name }}
    </option>
    {{/each}}
  </select>
      </div>
   </div>
   <div class="row">
      <div class="input-field col s12 m4">
         <label for="">Description</label>
         <input class="validate" type="text" name="description" id="" value="{{product.description}}" required minlength="1" autocomplete="off">
      </div>
   </div>

   <div class="row">
      <div class="col s12 m4 center-align">
         <input class="btn" type="submit" value="Edit">
      </div>
   </div>
</form>
</div>

